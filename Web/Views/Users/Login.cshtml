@model CoreLibrary.Models.EFModels.User
@{
    ViewData["Title"] = "Авторизация";
}

<br/>
<br/>
<br/>
<br/>

<body class="bg-gradient-primary">
<div class="container" style="padding-left: 0;padding-bottom: 0;padding-right: 0;padding-top: 0;box-shadow: 0px 0px 8px 1px rgb(0,0,0); border-radius: 10px;">
    <div class="card shadow-lg o-hidden border-0 my-5">
        <div class="card-body p-0">
            <div class="row">
                <div class="col-lg-5 d-none d-lg-flex">
                    <div class="flex-grow-1 bg-login-image" style="background: url(/img/cosmonaft/login_cosmonaft.png?h=f9b3af965fa684fd65b77994f2eee267) center / auto;"></div>
                </div>
                <div class="col-lg-6">
                    <div class="p-5">
                        <div class="text-center">
                            <h4 class="text-dark mb-4">С возвращением!</h4>
                        </div>
                        <form class="user" asp-action="Login">
                            <div class="mb-3">
                                <input asp-for="Login" class="form-control form-control-user" type="text" placeholder="Введите логин..." name="login"/>
                                <br/>
                                <span asp-validation-for="Login" class="text-danger">
                                </span>
                            </div>
                            <div class="mb-3">
                                <input asp-for="Password" class="form-control form-control-user" type="password" placeholder="Введите пароль..." name="password">
                                <br/>
                                <span asp-validation-for="Password" class="text-danger">
                                </span>
                            </div>
                            <div class="mb-3">
                                <div class="custom-control custom-checkbox small"></div>
                            </div>

                            <button class="btn btn-primary d-block btn-user w-100" type="submit" value="Login">Авторизоваться</button>
                        </form>
                        <br/>
                        @{
                            if (ViewData["Error"] != null)
                            {
                                <div align="center">
                                    <span class="text-danger">@ViewData["Error"]</span>
                                </div>
                            }
                        }
                        <br/>
                        <div class="text-center">
                            <a class="small" asp-controller="Users" asp-action="Create">Если у вас нет аккаунт, создайте его здесь!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
}